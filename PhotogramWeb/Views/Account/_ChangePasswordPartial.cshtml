@model PhotogramWeb.Models.LocalPasswordModel


@using (Html.BeginForm("Manage", "Account")) {
    @Html.AntiForgeryToken()
    @Html.ValidationSummary()

    <section id="login">
        <div class="row">
            <div class="col-lg-6">
                <div class="well ">
                    <fieldset>
                        <legend>@Resources.UIStrings.ChangePasswordForm</legend>
                        <div class="form-group" >
                            <div class="col-lg-2">
                                @Html.LabelFor(m => m.OldPassword, new { @class = "control-label"})
                            </div>
                            @Html.PasswordFor(m => m.OldPassword, new { @class = "col-lg-12 form-control"})
                        </div>
                        <div class="form-group" >
                            <div class="col-lg-2">
                                @Html.LabelFor(m => m.NewPassword, new { @class = "control-label"})
                            </div>
                            @Html.PasswordFor(m => m.NewPassword, new { @class = "col-lg-12 form-control" })
                        </div>
                        <div class="form-group" >
                            <div class="col-lg-2">
                                @Html.LabelFor(m => m.ConfirmPassword, new { @class = "control-label"})
                            </div>
                            @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "col-lg-12 form-control" })
                        </div>
                        <button type="submit" class="btn-info">@Resources.UIStrings.ChangeРassword</button>
                    </fieldset>
                </div>
            </div>
        </div>
    </section>
}
