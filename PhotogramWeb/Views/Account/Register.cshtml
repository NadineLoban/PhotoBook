@model PhotogramWeb.Models.RegisterModel

<hgroup class="title">
    <h1>@ViewBag.Title</h1>
    <h2>@Resources.UIStrings.CreateNewAccount</h2>
</hgroup>

@using (Html.BeginForm()) {
    @Html.AntiForgeryToken()
    @Html.ValidationSummary()
<section id="login">
    <div class="row">
        <div class="col-lg-6">
            <div class="well ">
                <fieldset>
                    <legend>@Resources.UIStrings.RegistrationForm</legend>
                    <div class="form-group" >
                        <div class="col-lg-1">
                            @Html.LabelFor(m => m.UserName, new { @class = "control-label"})
                        </div>
                        @Html.TextBoxFor(m => m.UserName, new { @class = "col-lg-12 form-control", @placeholder = "Логин" })
                    </div>   
                    <div class="form-group" >
                        <div class="col-lg-1">
                            @Html.LabelFor(m => m.Email, new { @class = "control-label"})
                        </div>
                        @Html.TextBoxFor(m => m.Email, new { @class = "col-lg-12 form-control", @placeholder = "Email" })
                    </div> 
                    <div class="form-group" >
                        <div class="col-lg-1">
                            @Html.LabelFor(m => m.Password, new { @class = "control-label"})
                        </div>
                        @Html.PasswordFor(m => m.Password, new { @class = "col-lg-12 form-control", @placeholder = "Пароль" })
                    </div>
                    <div class="form-group" >
                        <div class="col-lg-1">
                            @Html.LabelFor(m => m.ConfirmPassword, new { @class = "control-label"})
                        </div>
                        @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "col-lg-12 form-control", @placeholder = "Повторите пароль" })
                    </div>
                    <div class="form-group">
                        <div class="col-lg-10 col-lg-offset-2">
                            <button type="submit" class="btn btn-primary" >@Resources.UIStrings.Register</button> 
                        </div>
                    </div>
                </fieldset>
                
            </div>
        </div>
    </div>
</section>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
