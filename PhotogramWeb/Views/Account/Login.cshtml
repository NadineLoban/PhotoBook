@model PhotogramWeb.Models.LoginModel

@{
    
    ViewBag.Title = @Resources.UIStrings.Login;
    ViewBag.Message = @ViewBag.Message;
}

<hgroup class="title">
    <h1>@ViewBag.Title</h1>
</hgroup>
@using (Html.BeginForm(new { ReturnUrl = ViewBag.ReturnUrl,  }))
            {
                @Html.AntiForgeryToken()
                @Html.ValidationSummary(true)
    
                <section id="login">
                    <div class="row">
                        <div class="col-lg-6">
                            <div class="well ">
                                <fieldset>
                                    <div class="form-group" >
                                        <div class="col-lg-1">
                                            @Html.LabelFor(m => m.UserName, new { @class = "control-label"})
                                        </div>
                                        @Html.TextBoxFor(m => m.UserName, new { @class = "col-lg-12 form-control", @placeholder = "Логин" })
                                        @Html.ValidationMessageFor(m => m.UserName)
                                    </div>   
                                    <div class="form-group" >
                                        <div class="col-lg-1">
                                            @Html.LabelFor(m => m.Password, new { @class = "control-label"})
                                        </div>
                                        @Html.PasswordFor(m => m.Password, new { @class = "col-lg-12 form-control", @placeholder = "Пароль" })
                                        @Html.ValidationMessageFor(m => m.Password)
                                        @Html.CheckBoxFor(m => m.RememberMe, new { @class = "col-lg-12"})
                                        @Html.LabelFor(m => m.RememberMe, new { @class = "checkbox" })
                                    </div>
                                    <div class="form-group">
                                        <div class="col-lg-10 col-lg-offset-2">
                                            <button type="submit" class="btn btn-primary" >@Resources.UIStrings.Enter</button> 
                                        </div>
                                    </div>
                                </fieldset>
                
                            </div>
                        </div>
                    </div>
                </section>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
