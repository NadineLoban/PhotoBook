@model IEnumerable<DomainViewModels.ViewModels.PhotoSlideShowViewModel>
<hgroup class="title">
    <h1>@ViewBag.Message</h1>
    <h1>@ViewBag.Title</h1>
</hgroup>
@section featured {
@*    <div class="fotorama" data-width="512">*@
@*    @foreach (var url in Model)*@
@*    {*@
@*        <img src="@url.PhotoUrl">*@
@*    }*@
@*</div>*@
    <div class="row-fluid">
        <div class="span6" >
           
            <div id="carousel-generic" class="carousel slide" data-ride="carousel">
            @if( Model != null && Model.ToArray().Length != 0) 
            {
                <ol class="carousel-indicators">
                    <li data-target="#carousel-example-generic" data-slide-to="0" class="active"></li>
                    @for (int i = 0; i < Model.ToArray().Length; i++ )
                    {
                        <li data-target="#carousel-generic" data-slide-to="@i"></li>
                
                    }
                </ol>
                <div class="carousel-inner">
                    @{
                        var it = Model.First();
                    }
                    @foreach (var item in Model)
                    {
                 
                        if (item.Equals(it))
                        {
                            <div class="item active">
                                <img src="@item.PhotoUrl" width="100%">
                                <div class="carousel-caption">
                                    <a href="@Url.Action("Details", "Photo", new {photoId = item.PhotoId})" style="color: yellow"><p>@item.CommonRaiting</p></a>
                                    <a href="@Url.Action("GetAllUserPhotos", "Photo", new {userName = item.OwnerLogin})" style="color: yellow"><p>@item.OwnerLogin</p></a>
                                </div>
                            </div>
                        }
                        else
                        {
                            <div class="item">
                                <img src="@item.PhotoUrl"  width="100%">
                                <div class="carousel-caption">
                                    <a href="@Url.Action("Details", "Photo", new {photoId = item.PhotoId})" style="color: yellow"><p>@item.CommonRaiting</p></a>
                                    <a href="@Url.Action("GetAllUserPhotos", "Photo", new {userName = item.OwnerLogin})" style="color: yellow"><p>@item.OwnerLogin</p></a>
                                </div>
                            </div>
                        }
                     
                    }
                </div>
                <a class="left carousel-control" href="#carousel-generic" data-slide="prev">
                    <span class="glyphicon glyphicon-chevron-left"></span>
                </a>
                <a class="right carousel-control" href="#carousel-generic" data-slide="next">
                    <span class="glyphicon glyphicon-chevron-right"></span>
                </a>
                
	         }  
            </div>
        </div>
    </div>
    


}


